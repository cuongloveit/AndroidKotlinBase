<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewStyle">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HeadingText" parent="TextViewStyle">
        <item name="android:textSize">@dimen/heading_text_size</item>
    </style>

    <style name="BodyText" parent="TextViewStyle">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="ButtonStyle" parent="TextViewStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>

    </style>

    <style name="EditTextStyle" parent="TextViewStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>

    </style>


</resources>